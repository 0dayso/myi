<script type="text/javascript">
$(function(){
	var allid = [];
	var seachArr = [];
	<?php foreach($this->productAll['product'] as $supId=>$v){
	if(!empty($v[0])){?>
			allid[<?php echo $this->productAll['sup'][$supId]['id']?>] = <?php echo $this->productAll['sup'][$supId]['id']?>;
