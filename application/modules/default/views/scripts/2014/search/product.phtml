				$(".productTr<?php echo $this->productAll['sup'][$supId]['id']?>").show();
				$(".jsShowMoreTr<?php echo $this->productAll['sup'][$supId]['id']?>").remove();
			});	
	<?php }}?>


	$(".searchprd").click(function(){
		var id = $(this).data("id");
		var allnull = true;
		if(id=='all'){
			for (var key in allid) {
				$("#product"+key).css('display','block');
			}
			for (var key in seachArr) {
				seachArr[key] = 0;
			}
		}else{
			if (!inarray(id, seachArr)) {
				seachArr[id] = id;
	        }else{
	        	seachArr[id] = 0;
	        }
			for (var key in allid) {
				$("#product"+key).css('display','none');
			}
		}
		for (var key in seachArr) {
			 if(seachArr[key]==0){
				 $("#product"+key).css('display','none');
				 $("#searchprd-"+key).removeClass("curr");
			 }else{
				 allnull = false;
				 $("#product"+key).css('display','block');
				 $("#searchprd-"+key).addClass("curr");
			 }
		}
		//全部空
		if(allnull){
			for (var key in allid) {
				$("#product"+key).css('display','block');
			}
			$("#searchprd-all").addClass("curr");
		}else{
			$("#searchprd-all").removeClass("curr");
		}
    });	
})
function inarray(search, array) {
    for (var i in array) {
        if (array[i] == search) {
            return true;
        }
    }
    return false;
}
</script>