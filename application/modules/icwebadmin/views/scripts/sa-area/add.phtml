<script type="text/javascript" language="javascript">
function add()
{
    var sectionid    = document.getElementById('Section_Area_ID').value;
	var sectiondesc  = document.getElementById('Section_Area_Des').value;
	var orderid      = document.getElementById('Order_ID').value;
	$.ajax({
            url: '<?php echo $this->addurl;?>',
            data: {'sectionid':sectionid,'sectiondesc':sectiondesc,'orderid':orderid},
            type: 'post',
            dataType: 'json',
            success: function(arr) {
              if(arr.code == 0){
            	  alert(arr.message);
				  location.reload();
               }else{
			      document.getElementById('message_sess_son').style.display = "block";
	              document.getElementById('alert_message_son').innerHTML = arr.message;
			   }
			}
	});
}
</script>